{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2015"],
    "target": "es5",
    "outDir": "lib",
    "rootDir": "src",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "lib",
    "node_modules"
  ]
}
